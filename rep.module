/**
 * Implements hook_preprocess_HOOK() for block templates.
 */
function rep_preprocess_block(&$variables) {
  // Add the core/drupal.dialog.ajax library.
  $variables['#attached']['library'][] = 'core/drupal.dialog.ajax';
}

